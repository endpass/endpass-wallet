{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "Cypress": true,
    "cy": true,
    "ENV": true
  },
  "plugins": [
    "json"
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "rules": {
    "func-names": 0,
    'max-len': [
      'warn',
      80,
      2,
      {
        ignoreUrls: true,
        ignoreComments: false,
        ignoreRegExpLiterals: true,
        ignoreStrings: false,
        ignoreTemplateLiterals: false,
      },
    ],
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": ["state"]
      }
    ],
    'import/extensions': ['error', {
      'js': 'never',
    }],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["@", "fixtures", "mocks"]
      }
    ],
    "vue/order-in-components": [
      "error",
      {
        "order": [
          "el",
          "name",
          "inheritAttrs",
          "inject",
          "provide",
          ["props", "propsData"],
          "data",
          "computed",
          "watch",
          "methods",
          "LIFECYCLE_HOOKS",
          "mixins",
          "components",
          [
            "functional",
            "delimiters",
            "comments",
            "directives",
            "filters",
            "parent",
            "extends",
            "model",
            "template",
            "render",
            "renderError"
          ]
        ]
      }
    ],
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": 1,
        "multiline": {
          "max": 1,
          "allowFirstLine": false
        }
      }
    ],
    "vue/html-closing-bracket-newline": [
      "error",
      {
        "singleline": "never",
        "multiline": "always"
      }
    ]
  }
}
